// ==================== GENERATOR & DATASOURCE ====================
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== ENUMS ====================
enum UserStatus {
  PENDING_APPROVAL
  ACTIVE
  SUSPENDED
  DELETED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  REVIEW
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  API_ACCESS
  DEVICE_AUTH
  ACCOUNT_RECOVERY
}

enum DeviceType {
  WEB
  ANDROID
  IOS
  DESKTOP
}

enum NotificationType {
  SYSTEM
  SECURITY
  FINANCE
  HR
  PROJECT
  APPROVAL
  REMINDER
}

enum NotificationPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum ModuleKey {
  DASHBOARD
  AUTH
  EXPENSES
  INCOME
  INVESTMENTS
  ASSETS
  LIABILITIES
  PROJECTS
  HR_ADMIN
  CONTROL_PANEL
  SETTINGS
  CONTACT
  REPORTS
  ANALYTICS
}

enum LanguageCode {
  en
  bn
  ar
}

enum CurrencyCode {
  SAR
  USD
  EUR
  GBP
  AED
}

enum ExpenseStatus {
  DRAFT
  PENDING
  REVIEW
  APPROVED
  REJECTED
  CONVERTED_TO_ADVANCE
  PAID
}

enum BillStatus {
  DRAFT
  SENT
  PARTIALLY_PAID
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CHECK
  CREDIT_CARD
  MOBILE_PAYMENT
  OTHER
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  COMPLETED
  CANCELLED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  COMPLETED
  BLOCKED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// ==================== TABLES ====================

// User Management
model User {
  id                    String        @id @default(cuid())
  email                 String        @unique
  passwordHash          String
  fullName              String
  address               String?
  city                  String?
  state                 String?
  country               String        @default("SA")
  postalCode            String?
  profileImage          String?
  idImage               String?
  idNumber              String?
  idType                String?       @default("NATIONAL_ID")
  phone                 String        @unique
  phoneVerified         Boolean       @default(false)
  emergencyContactName  String?
  emergencyContactPhone String?
  emergencyContactRelation String?
  
  // Approval & Status
  status                UserStatus    @default(PENDING_APPROVAL)
  approvalStatus        ApprovalStatus @default(PENDING)
  approvedById          String?
  approvedBy            User?         @relation("UserApprovals", fields: [approvedById], references: [id])
  approvedAt            DateTime?
  rejectionReason       String?
  
  // Creator & Admin Flags
  isCreator             Boolean       @default(false)
  isSuperAdmin          Boolean       @default(false)
  isCompanyAdmin        Boolean       @default(false)
  
  // Security
  pinHash               String?
  pinSetAt              DateTime?
  failedLoginAttempts   Int           @default(0)
  lastFailedAttempt     DateTime?
  lockedUntil           DateTime?
  mustChangePassword    Boolean       @default(true)
  twoFactorEnabled      Boolean       @default(false)
  twoFactorSecret       String?
  
  // Timestamps
  emailVerifiedAt       DateTime?
  phoneVerifiedAt       DateTime?
  lastLoginAt           DateTime?
  lastActiveAt          DateTime?
  lastPasswordChangeAt  DateTime      @default(now())
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  deletedAt             DateTime?
  
  // Relations
  companyId             String?
  company               Company?      @relation(fields: [companyId], references: [id])
  
  // Auth Relations
  sessions              Session[]
  refreshTokens         RefreshToken[]
  verificationTokens    VerificationToken[]
  devices               Device[]
  roles                 UserRole[]
  auditLogs             AuditLog[]
  notifications         Notification[]
  securityQuestions     SecurityQuestion[]
  
  // Business Relations
  submittedExpenses     Expense[]     @relation("ExpenseSubmitter")
  approvedExpenses      Expense[]     @relation("ExpenseApprover")
  staffProfile          Staff?
  createdProjects       Project[]     @relation("ProjectCreator")
  assignedTasks         TaskAssignment[]
  sentMessages          Message[]     @relation("MessageSender")
  receivedMessages      Message[]     @relation("MessageRecipient")
  
  @@index([email])
  @@index([phone])
  @@index([status])
  @@index([companyId])
  @@index([createdAt])
  @@fulltext([fullName, email])
}

// Company & Tenant
model Company {
  id                String   @id @default(cuid())
  name              String
  legalName         String?
  taxId             String?  @unique
  registrationNumber String? @unique
  
  // Contact Info
  address           String?
  city              String?
  state             String?
  country           String    @default("SA")
  postalCode        String?
  phone             String?
  email             String?
  website           String?
  
  // Branding
  logoUrl           String?
  primaryColor      String   @default("#00bcd4")
  secondaryColor    String   @default("#00e5ff")
  fontFamily        String   @default("Inter, sans-serif")
  
  // Settings
  defaultLanguage   LanguageCode @default(en)
  defaultCurrency   CurrencyCode @default(SAR)
  timezone          String       @default("Asia/Riyadh")
  dateFormat        String       @default("DD/MM/YYYY")
  timeFormat        String       @default("12")
  
  // Status
  isActive          Boolean  @default(true)
  isVerified        Boolean  @default(false)
  verificationNotes String?
  
  // Timestamps
  verifiedAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  deletedAt         DateTime?
  
  // Relations
  users             User[]
  settings          CompanySettings?
  modules           CompanyModule[]
  expenses          Expense[]
  incomeBills       IncomeBill[]
  projects          Project[]
  staff             Staff[]
  departments       Department[]
  
  // Creator Reference
  createdById       String
  createdBy         User     @relation(fields: [createdById], references: [id])
  
  @@index([name])
  @@index([taxId])
  @@index([createdById])
  @@index([createdAt])
  @@fulltext([name, legalName])
}

// Authentication Tables
model Session {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  token          String   @unique
  deviceId       String?
  device         Device?  @relation(fields: [deviceId], references: [id])
  ipAddress      String?
  userAgent      String?
  location       String?
  isValid        Boolean  @default(true)
  lastActivityAt DateTime @default(now())
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@index([lastActivityAt])
}

model RefreshToken {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  token        String   @unique
  deviceId     String?
  device       Device?  @relation(fields: [deviceId], references: [id])
  isValid      Boolean  @default(true)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model VerificationToken {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  token     String    @unique
  type      TokenType
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  
  @@index([userId, type])
  @@index([token])
  @@index([expiresAt])
}

model Device {
  id               String     @id @default(cuid())
  userId           String
  user             User       @relation(fields: [userId], references: [id])
  deviceId         String     @unique
  deviceName       String?
  deviceType       DeviceType @default(WEB)
  platform         String?
  osVersion        String?
  appVersion       String?
  fcmToken         String?
  biometricEnabled Boolean    @default(false)
  pinEnabled       Boolean    @default(false)
  lastUsedAt       DateTime   @default(now())
  isTrusted        Boolean    @default(false)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  
  sessions         Session[]
  refreshTokens    RefreshToken[]
  
  @@index([userId])
  @@index([deviceId])
  @@index([fcmToken])
}

// Role & Permission System
model Role {
  id              String     @id @default(cuid())
  companyId       String?
  company         Company?   @relation(fields: [companyId], references: [id])
  name            String
  description     String?
  isSystem        Boolean    @default(false)
  isDefault       Boolean    @default(false)
  level           Int        @default(0)
  permissions     RolePermission[]
  userRoles       UserRole[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@unique([companyId, name])
  @@index([companyId])
  @@index([level])
  @@index([isSystem])
}

model Permission {
  id          String   @id @default(cuid())
  module      ModuleKey
  action      String
  name        String
  description String?
  category    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  rolePermissions RolePermission[]
  
  @@unique([module, action])
  @@index([module])
  @@index([category])
  @@index([isActive])
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  role         Role       @relation(fields: [roleId], references: [id])
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id])
  createdAt    DateTime   @default(now())
  
  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
  assignedById String?
  assignedBy User?   @relation(fields: [assignedById], references: [id])
  assignedAt DateTime @default(now())
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  
  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@index([expiresAt])
}

// Audit & Logging
model AuditLog {
  id           String   @id @default(cuid())
  
  // Actor
  userId       String?
  user         User?    @relation(fields: [userId], references: [id])
  companyId    String?
  company      Company? @relation(fields: [companyId], references: [id])
  
  // Action
  actionType   String
  entityType   String
  entityId     String?
  
  // Details
  ipAddress    String?
  userAgent    String?
  location     String?
  
  // Changes
  oldData      Json?
  newData      Json?
  changes      Json?
  
  // Metadata
  description  String?
  severity     String   @default("INFO")
  metadata     Json?
  
  createdAt    DateTime @default(now())
  
  @@index([userId])
  @@index([companyId])
  @@index([actionType])
  @@index([entityType])
  @@index([createdAt])
  @@index([severity])
}

model Notification {
  id            String         @id @default(cuid())
  userId        String
  user          User           @relation(fields: [userId], references: [id])
  companyId     String?
  company       Company?       @relation(fields: [companyId], references: [id])
  
  type          NotificationType
  priority      NotificationPriority @default(MEDIUM)
  title         String
  message       String
  data          Json?
  
  // Status
  isRead        Boolean        @default(false)
  isArchived    Boolean        @default(false)
  
  // Delivery
  sentVia       String[]
  emailSent     Boolean        @default(false)
  pushSent      Boolean        @default(false)
  smsSent       Boolean        @default(false)
  
  readAt        DateTime?
  archivedAt    DateTime?
  createdAt     DateTime       @default(now())
  
  @@index([userId])
  @@index([companyId])
  @@index([type])
  @@index([isRead])
  @@index([createdAt])
  @@index([priority])
}

// Security
model SecurityQuestion {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  question  String
  answer    String   @encrypted
  order     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, question])
  @@index([userId])
  @@index([isActive])
}

model RateLimit {
  id          String   @id @default(cuid())
  key         String   @unique
  attempts    Int      @default(1)
  lockedUntil DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([key])
  @@index([lockedUntil])
}

// Business Modules
model Expense {
  id            String       @id @default(cuid())
  companyId     String
  company       Company      @relation(fields: [companyId], references: [id])
  submitterId   String
  submitter     User         @relation("ExpenseSubmitter", fields: [submitterId], references: [id])
  approverId    String?
  approver      User?        @relation("ExpenseApprover", fields: [approverId], references: [id])
  
  // Expense Details
  title         String
  description   String?
  category      String
  subCategory   String?
  amount        Decimal     @db.Decimal(10, 2)
  currency      CurrencyCode @default(SAR)
  date          DateTime
  paymentMethod PaymentMethod?
  
  // Attachments
  receipts      Json?       // Array of file URLs
  attachments   Json?       // Additional attachments
  
  // Status
  status        ExpenseStatus @default(DRAFT)
  rejectionReason String?
  
  // Metadata
  tags          String[]
  projectId     String?
  project       Project?    @relation(fields: [projectId], references: [id])
  departmentId  String?
  department    Department? @relation(fields: [departmentId], references: [id])
  
  // Timestamps
  submittedAt   DateTime?
  approvedAt    DateTime?
  paidAt        DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([companyId])
  @@index([submitterId])
  @@index([approverId])
  @@index([status])
  @@index([date])
  @@index([category])
  @@fulltext([title, description])
}

